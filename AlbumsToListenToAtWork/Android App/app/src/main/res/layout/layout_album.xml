<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/albumView"
                        android:background="@drawable/testing"
                        android:layout_width="match_parent"
                        android:scaleType="matrix"
                        android:layout_height="295dp"
                        android:layout_marginBottom="0dp"/>


                <!-- <ProgressBar
                        android:layout_width="wrap_content"         Add this when you figure out firebase functionality
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                /> -->

            </RelativeLayout>


            <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/textViewAlbumName"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:text="Album Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:fontFamily="serif"/>

                <TextView
                        android:text="Artist Name"
                        android:id="@+id/textViewArtistName"
                        android:layout_below="@id/textViewAlbumName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:fontFamily="serif"/>

            </RelativeLayout>

            <TextView
                    android:background="#414141"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>